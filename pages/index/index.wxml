<!--index.wxml-->
<view>
  <van-tabbar active="{{ active }}" bind:change="tabChange">
    <van-tabbar-item icon="home-o">首页</van-tabbar-item>
    <van-tabbar-item icon="chat-o">消息</van-tabbar-item>
    <van-tabbar-item icon="friends-o">我的</van-tabbar-item>
  </van-tabbar>
  <!-- 纯色或图片占位 -->
  <view class="up-container">
    <van-row>
      <van-col span="24">
        <van-notice-bar left-icon="volume-o" text="{{notice_text}}" class="bar" />
      </van-col>
    </van-row>
    <van-row>
      <van-col span="8">
        <van-icon name="scan" size="100rpx" class="top-icon-container" />
      </van-col>
      <van-col span="8">
        <van-icon name="qr" size="100rpx" class="top-icon-container" />
      </van-col>
      <van-col span="8">
        <van-icon name="qr-invalid" size="100rpx" class="top-icon-container" />
      </van-col>
    </van-row>
    <van-row>
      <van-col span="8">
        <text style="margin-left: 9vw">扫一扫</text>
      </van-col>
      <van-col span="8">
        <text style="margin-left: 3vw">出示健康码</text>
      </van-col>
      <van-col span="8">
        <text style="margin-left: 3vw">申领静态码</text>
      </van-col>
    </van-row>
  </view>
  <view>
    
  </view>
</view>