<!--pages/tabs/message/message.wxml-->
<view>
  <van-tabbar active="{{ active }}" bind:change="tabChange">
    <van-tabbar-item icon="home-o">首页</van-tabbar-item>
    <van-tabbar-item icon="chat-o">消息/工单</van-tabbar-item>
    <van-tabbar-item icon="friends-o">我的</van-tabbar-item>
  </van-tabbar>
</view>

<van-tabs type="card" bind:change="headChange" active="{{ headActive }}" custom-class="uptab-class">
  <van-tab title="我的工单">
  </van-tab>
  <van-tab title="我的消息">
  </van-tab>
</van-tabs>
<view style="display:{{headActive == 0 ? 'block' : 'none'}}" class="downtab-class">
  <van-tabs active="{{ woActive }}" bind:change="woChange" id="ts">
    <van-tab title="已处理"></van-tab>
    <van-tab title="未处理"></van-tab>
    <van-tab title="待我处理"></van-tab>
  </van-tabs>
</view>
<view style="display:{{headActive == 1 ? 'block' : 'none'}}" class="downtab-class">
  <van-tabs active="{{ msgActive }}" bind:change="msgChange">
    <van-tab title="已读"></van-tab>
    <van-tab title="未读"></van-tab>
  </van-tabs>
</view>

<template name="list">
  <view wx:for="{{articles}}" wx:key="aid">
    <van-swipe-cell right-width="{{ 65 }}" async-close>
      <van-cell-group>
        <van-cell size="large" custom-class="cell-class" is-link >
            <view slot="title">
              <view style="margin-bottom:0.4em;display:flex;flex-direction:row;">
              <rich-text space="emsp" class="headline-class">{{item.headLine}}</rich-text>
              <rich-text style="font-weight:400;position: fixed;right:2em;">{{item.time}}</rich-text>
            </view>
              <rich-text space="emsp" class="content-class">{{item.content}}</rich-text>
            </view>
        </van-cell>
      </van-cell-group>
      <view slot="right">{{desc}}</view>
    </van-swipe-cell>
  </view>
</template>

<view >
  <template is="list" data="{{articles,desc}}"/>
</view>
<van-toast id="van-toast" />